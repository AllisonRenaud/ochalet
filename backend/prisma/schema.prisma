// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource postgres {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement())
  first_name    String
  last_name     String
  email         String  @unique
  phone         String?
  zip_code      Int?
  city_name     String?
  country       String?
  street_name   String?
  street_number Int?
  password      String
  role          String

  // Relations
  offers   Offer[]
  bookings Booking[]

  @@map("users")
}

model Offer {
  id              Int     @id @default(autoincrement())
  title           String
  complement      String
  description     String
  zip_code        Int
  city_name       String
  country         String
  street_name     String
  street_number   Int
  price           Int
  media           Json
  status          String
  people_capacity Int
  rooms           Int
  bathrooms       Int
  pets            Boolean
  tv              Int
  wifi            Boolean
  cleaning        Boolean
  breakfast       Boolean

  // Relations
  user   User? @relation(fields: [userId], references: [id])
  userId Int?

  bookings Booking[]

  location   Location @relation(fields: [locationId], references: [id])
  locationId Int

  @@map("offers")
}

model Location {
  id     Int    @id @default(autoincrement())
  name   String
  image  String
  status String

  offers Offer[]

  @@map("locations")
}

model Booking {
  id        Int    @id @default(autoincrement())
  dateStart String
  dateEnd   String
  status    String
  sellerId  Int


  // Relations
  user   User? @relation(fields: [userId], references: [id])
  userId Int?

  offer   Offer? @relation(fields: [offerId], references: [id])
  offerId Int?

  @@map("bookings")
}
